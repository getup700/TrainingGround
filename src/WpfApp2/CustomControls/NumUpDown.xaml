<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:cc="clr-namespace:WpfApp2.CustomControls"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="cc:NumUpDown">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="cc:NumUpDown">
                    <Grid Margin="3"
                          Background="{TemplateBinding Background}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"
                                              MaxWidth="100" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="*"
                                              MaxWidth="100" />
                        </Grid.ColumnDefinitions>
                        <RepeatButton Grid.Column="0"
                                      Margin="2"
                                      Content="Down" />
                        <Border Grid.Column="1">
                            <TextBlock Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type cc:NumUpDown}}, Path=Value}" />
                        </Border>
                        <RepeatButton Grid.Column="2"
                                      Margin="2"
                                      Content="Up" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>