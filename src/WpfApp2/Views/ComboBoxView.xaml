<UserControl
    x:Class="WpfApp2.Views.ComboBoxView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gif="http://wpfanimatedgif.codeplex.com"
    xmlns:helper="clr-namespace:WpfApp2.Helpers"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:WpfApp2.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:WpfApp2.UserControls"
    xmlns:vm="clr-namespace:WpfApp2.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Style="{StaticResource animation}"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:ComboBoxViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <Storyboard
            x:Key="translationStoryboard">
            <DoubleAnimation
                Storyboard.TargetName="imageTranslateTransform"
                Storyboard.TargetProperty="X"
                From="0"
                To="200"
                Duration="0:0:5" />
        </Storyboard>
    </UserControl.Resources>
    <StackPanel
        x:Name="stackPanel"
        Background="Red">
        <ComboBox
            x:Name="ComboBox"
            Width="120"
            Height="30"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding Items}"
            SelectedItem="{Binding SelectedItem}" />
        <Button
            x:Name="button"
            Content="ChangeItem" />
        <uc:UnitCard
            BackColor="Blue" />
        <StackPanel
            Orientation="Horizontal">
            <Image
                Width="100"
                Height="100"
                gif:ImageBehavior.AnimatedSource="/Resources/maomeme.gif">
                <Image.RenderTransform>
                    <TranslateTransform x:Name="imageTranslateTransform" />
                </Image.RenderTransform>
            </Image>
            <Border
                Width="100"
                Height="100"
                Background="Blue" />
        </StackPanel>
    </StackPanel>
</UserControl>
