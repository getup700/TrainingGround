<UserControl x:Class="WpfApp1.Views.Communication.AxisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp1.Views.Communication"
             d:DataContext="{d:DesignInstance Type=vm:AxisViewModel}"
             mc:Ignorable="d"
             xmlns:vm="clr-namespace:WpfApp1.ViewModels.Communication"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Canvas>
            <Slider>
                <Slider.Template>
                    <ControlTemplate>
                        
                    </ControlTemplate>
                </Slider.Template>
            </Slider>
        </Canvas>
    
        <!-- 下方控制：像 Slider 一样拖 -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0 10">
            <TextBlock Text="X"
                       VerticalAlignment="Center" />
            <Slider x:Name="xSlider"
                    Width="200"
                    Minimum="0"
                    Maximum="100"
                    Value="{Binding X,Mode=TwoWay}" />
            <TextBlock Text="Y"
                       VerticalAlignment="Center"
                       Margin="20 0 0 0" />
            <Slider x:Name="ySlider"
                    Width="200"
                    Minimum="0"
                    Maximum="100"
                    Value="{Binding Y,Mode=TwoWay}" />
            <TextBlock Text="Z"
                       VerticalAlignment="Center"
                       Margin="20 0 0 0" />
            <Slider x:Name="zSlider"
                    Width="200"
                    Minimum="0"
                    Maximum="100"
                    Value="{Binding Z,Mode=TwoWay}" />
        </StackPanel>
    </Grid>
</UserControl>
