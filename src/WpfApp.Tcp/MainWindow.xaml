<Window x:Class="WpfApp.Tcp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.Tcp"
        d:DataContext="{d:DesignInstance Type=local:MainWindow}"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <StackPanel Orientation="Horizontal">
        <UniformGrid Columns="2"
                     Width="200">
            <UniformGrid.Resources>
                <Style TargetType="Label">
                    <Setter Property="Height"
                            Value="40" />
                </Style>
            </UniformGrid.Resources>
            <Label Content="Address:" />
            <TextBox Text="{Binding Address}" />
            <Label Content="Port:" />
            <TextBox Text="{Binding Port}" />
            <Label Content="Timeout:" />
            <TextBox Text="{Binding Timeout}" />
            <Label Content="RetryTimes:" />
            <TextBox Text="{Binding RetryTimes}" />
            <Label Content="IsAutoRetry:" />
            <CheckBox IsChecked="{Binding IsAutoRetry}" />
        </UniformGrid>
        <Grid local:GridAssist.AutoRowColumn="_,2"
              Width="200">
            <Grid.Resources>
                <Style TargetType="Label">
                    <Setter Property="Height"
                            Value="40" />
                </Style>
            </Grid.Resources>
            <Label Content="Address:" />
            <TextBox Text="{Binding Address}" />
            <Label Content="Port:" />
            <TextBox Text="{Binding Port}" />
            <Label Content="Timeout:" />
            <TextBox Text="{Binding Timeout}" />
            <Label Content="RetryTimes:" />
            <TextBox Text="{Binding RetryTimes}" />
            <Label Content="IsAutoRetry:" />
            <CheckBox IsChecked="{Binding IsAutoRetry}" />
        </Grid>
        <Label Content="{Binding Message}" />
    </StackPanel>
</Window>
