<UserControl x:Class="WpfApp2.UserControls.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp2.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="40">
    <StackPanel Orientation="Horizontal">
        <Button x:Name="downBtn"
                Width="50"
                Content="Down" />
        <TextBox x:Name="valueBox"
                 Width="200"
                 Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:NumericUpDown}, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Button x:Name="upBtn"
                Width="50"
                Content="Up" />
    </StackPanel>
</UserControl>
