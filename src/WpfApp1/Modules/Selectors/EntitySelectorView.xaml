<UserControl x:Class="WpfApp1.Modules.Selectors.EntitySelectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp1.Modules.Selectors"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <!-- 基础数据模板选择器 -->
        <local:EntityTemplateSelector x:Key="EntityTemplateSelector">
            <local:EntityTemplateSelector.PersonTemplate>
                <DataTemplate DataType="{x:Type local:Person}">
                    <StackPanel Orientation="Horizontal"
                                Margin="5">
                        <TextBlock Text="姓名:"
                                   FontWeight="Bold"
                                   Width="50" />
                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                 Width="100" />
                        <TextBlock Text="年龄:"
                                   FontWeight="Bold"
                                   Width="50"
                                   Margin="5,0,0,0" />
                        <TextBox Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}"
                                 Width="50" />
                        <Button Content="删除"
                                Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource  AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Margin="5,0,0,0" />
                    </StackPanel>
                </DataTemplate>
            </local:EntityTemplateSelector.PersonTemplate>
            <local:EntityTemplateSelector.AnimalTemplate>
                <DataTemplate DataType="{x:Type local:Animal}">
                    <StackPanel Orientation="Horizontal"
                                Margin="5">
                        <TextBlock Text="种类:"
                                   FontWeight="Bold"
                                   Width="50" />
                        <TextBox Text="{Binding Species, UpdateSourceTrigger=PropertyChanged}"
                                 Width="100" />
                        <TextBlock Text="声音:"
                                   FontWeight="Bold"
                                   Width="50"
                                   Margin="5,0,0,0" />
                        <TextBox Text="{Binding Sound, UpdateSourceTrigger=PropertyChanged}"
                                 Width="100" />
                        <Button Content="删除"
                                Command="{Binding DataContext.RemoveCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Margin="5,0,0,0" />
                    </StackPanel>
                </DataTemplate>
            </local:EntityTemplateSelector.AnimalTemplate>
        </local:EntityTemplateSelector>
        <!-- 集合数据模板 -->
        <DataTemplate x:Key="EntityListTemplate">
            <ItemsControl ItemsSource="{Binding}"
                          ItemTemplateSelector="{StaticResource EntityTemplateSelector}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!-- 添加控件区域 -->
        <StackPanel Orientation="Horizontal"
                    Margin="10"
                    Grid.Row="0">
            <ComboBox x:Name="EntityTypeSelector"
                      Width="120"
                      Margin="0,0,10,0">
                <ComboBoxItem Content="Person" />
                <ComboBoxItem Content="Animal" />
            </ComboBox>
            <Button Content="添加"
                    Command="{Binding AddCommand}"
                    CommandParameter="{Binding ElementName=EntityTypeSelector, Path=SelectedItem.Content}"
                    Width="80" />
        </StackPanel>
        <!-- 显示对象列表 -->
        <!--<ContentControl Content="{Binding Entities}"
                        ContentTemplate="{StaticResource EntityListTemplate}"
                        Margin="10"
                        Grid.Row="1" />-->
        <ScrollViewer Grid.Row="1"
                      HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Auto"
                      PanningMode="VerticalOnly"
                      Margin="10">
            <ItemsControl ItemsSource="{Binding Entities}"
                          ItemTemplateSelector="{StaticResource EntityTemplateSelector}">
                <!--<ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>-->
            </ItemsControl>
        </ScrollViewer>
        <!-- 状态信息 -->
        <TextBlock Text="{Binding StatusMessage}"
                   Margin="10"
                   Grid.Row="2" />
    </Grid>
</UserControl>
