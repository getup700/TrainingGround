<Window x:Class="WpfApp.Communication.Client1.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.Communication.Client1"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:converter="clr-namespace:System.Windows.Converters;assembly=WindowsBase"
        xmlns:vm="clr-namespace:WpfApp.Communication.Client1.ViewModels"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="MainWindow.Client1"
        Height="450"
        Width="800">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Width"
                    Value="80" />
        </Style>
        <!--<Style TargetType="TextBox">
            <Setter Property="Width"
                    Value="200" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Width"
                    Value="120" />
        </Style>-->
        <Style x:Key="userStyle"
               TargetType="TextBlock">
            <Setter Property="Foreground"
                    Value="Red" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsOnLine}"
                             Value="False">
                    <Setter Property="Foreground"
                            Value="LightGray" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <DockPanel>
        <DockPanel>
            <StackPanel Orientation="Vertical"
                        Background="Gray"
                        DockPanel.Dock="Top">
                <Button DockPanel.Dock="Top"
                        Margin="0 10 0 0"
                        Content="ReConnect"
                        Width="100"
                        Background="Red"
                        Command="{Binding ConnectHubCommand}" />
                <StackPanel Margin="2 10">
                    <TextBlock Text="我的昵称" />
                    <TextBox x:Name="me"
                             Text="{Binding Me.Name}"
                             Width="100" />
                </StackPanel>

            </StackPanel>
            <TextBlock DockPanel.Dock="Top"
                       Text="好友列表" />
            <DockPanel DockPanel.Dock="Bottom">
                <Button Content="+"
                        DockPanel.Dock="Right"
                        Margin="5"
                        ToolTip="添加好友"
                        HorizontalAlignment="Right"
                        Command="{Binding AddFriendCommand}" />
                <TextBox DockPanel.Dock="Left" Margin="2"
                         Text="{Binding NewFriendName}" />
            </DockPanel>

            <ListBox ItemsSource="{Binding Friends}"
                     SelectedItem="{Binding CurrentChatUser}"
                     Background="AliceBlue"
                     DockPanel.Dock="Left"
                     Width="100">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}"
                                       Style="{StaticResource userStyle}" />
                            <TextBlock Text="{Binding IsOnLine, 
                                       Converter={StaticResource BoolToStringConverter},ConverterParameter='在线,离线'}"
                                       FontSize="10" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DockPanel>
        <DockPanel DockPanel.Dock="Top"
                   Height="30">
            <TextBlock x:Name="currentChatUser"
                       HorizontalAlignment="Left"
                       Text="{Binding CurrentChatUser.Name}"
                       FontSize="20" />
        </DockPanel>
        <DockPanel DockPanel.Dock="Bottom">
            <DockPanel DockPanel.Dock="Bottom"
                       Height="100">
                <Button DockPanel.Dock="Right"
                        VerticalAlignment="Bottom"
                        Margin="10"
                        Width="100"
                        Content="Send"
                        Command="{Binding SendCommand}"
                        CommandParameter="{Binding ElementName=txtMessage, Path=Text}" />
                <TextBox AllowDrop="False"
                         Text="{Binding InputMessage}" />
            </DockPanel>

            <StackPanel Orientation="Horizontal"
                        DockPanel.Dock="Top">

            </StackPanel>
        </DockPanel>
        <ListBox x:Name="lstMessages"
                 ItemsSource="{Binding Messages}"
                 DockPanel.Dock="Bottom"
                 HorizontalAlignment="Stretch"
                 HorizontalContentAlignment="Stretch"
                 VerticalAlignment="Top">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel x:Name="msg">
                        <DockPanel.Style>
                            <Style TargetType="DockPanel">
                                <Style.Triggers>
                                    <DataTrigger>
                                        <DataTrigger.Value>
                                            <MultiBinding Converter="{StaticResource StringToBoolConverter}">
                                                <Binding ElementName="me"
                                                         Path="Name" />
                                                <Binding ElementName="currentChatUser"
                                                         Path="Name" />
                                            </MultiBinding>
                                        </DataTrigger.Value>
                                        <DataTrigger.Setters>
                                            <Setter Property="HorizontalAlignment"
                                                    Value="Right" />
                                        </DataTrigger.Setters>
                                    </DataTrigger>

                                </Style.Triggers>
                            </Style>
                        </DockPanel.Style>
                        <TextBlock DockPanel.Dock="Top"
                                   Text="{Binding CreateTime}"
                                   FontSize="8" />
                        <TextBlock Text="{Binding Content}" />
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</Window>
