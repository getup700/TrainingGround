<UserControl x:Class="WpfApp1.Views.Communication.Axis2View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:converter="clr-namespace:WpfApp1.Converters"    xmlns:local="clr-namespace:WpfApp1.Views.Communication"
             mc:Ignorable="d"   xmlns:vm="clr-namespace:WpfApp1.ViewModels.Communication"
             d:DataContext="{d:DesignInstance vm:Axis2ViewModel}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converter:JointToVectorConverter x:Key="JointToVectorConverter" />
    </UserControl.Resources>
    <Grid>
        <Slider Minimum="0"
                Maximum="200"
                Value="{Binding X}"
                Margin="10,10,10,0"
                VerticalAlignment="Top" />
        <Slider Minimum="0"
                Maximum="200"
                Value="{Binding Y}"
                Margin="10,40,10,0"
                VerticalAlignment="Top" />
        <Slider Minimum="0"
                Maximum="200"
                Value="{Binding Z}"
                Margin="10,70,10,0"
                VerticalAlignment="Top" />
        <Canvas HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <!-- 底座 Z -->
            <Image Source="/Resources/Img/Z.png"
                   Width="128"
                   Height="128"
                   Canvas.Left="{Binding ZHor}"
                   Canvas.Top="{Binding ZVer}" />
            <!-- 大臂 X1 -->
            <Image Source="/Resources/Img/X1.png"
                   Width="128"
                   Height="128"
                   Canvas.Left="{Binding X1Hor}"
                   Canvas.Top="{Binding X1Ver}"
                   RenderTransformOrigin="0.5,1">
                <Image.RenderTransform>
                    <TransformGroup>
                        <TranslateTransform X="0"
                                            Y="0" />
                        <RotateTransform Angle="45" />
                        <!-- 可选旋转 -->
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <!-- 小臂 Y1 -->
            <Image Source="/Resources/Img/Y1.png"
                   Width="128"
                   Height="128"
                   Canvas.Left="{Binding Y1Hor}"
                   Canvas.Top="{Binding Y1Ver}"
                   RenderTransformOrigin="0.5,1" />
        </Canvas>
    </Grid>
</UserControl>
