<UserControl x:Class="WpfApp1.Views.Communication.SqlSugarStageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp1.Views.Communication"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <DockPanel>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    DockPanel.Dock="Top">
            <Button Content="Refresh"
                    Command="{ Binding RefreshCommand}" />
            <Button Content="Stop"
                    Command="{Binding StopCommand}" />
            <Button Content="Clear"
                    Command="{Binding ClearCommand}" />
            <Button Content="ReadSugar"
                    Command="{Binding ReadSugarCommand}" />
            <Button Content="Update"
                    Command="{Binding UpdateCommand}" />
            <Button Content="Update1"
                    Command="{Binding Update1Command}" />
            <Button Content="Substring"
                    Command="{Binding SubstringNameCommand}" />
        </StackPanel>
        <StackPanel Orientation="Vertical"
                    DockPanel.Dock="Top">
            <TextBlock Text="{Binding TotalConnection, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="{Binding ValidConnection, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="{Binding FirstState, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="{Binding State, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="{Binding LastState, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <ListBox ItemsSource="{Binding ActorList}"
                 Margin="2"
                 DockPanel.Dock="Bottom">
            <ListBox.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Width"
                            Value="70" />
                </Style>
            </ListBox.Resources>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="2"
                                   Width="100"
                                   Text="{Binding Id}" />
                        <TextBlock Margin="2"
                                   Width="100"
                                   Text="{Binding FirstName}" />
                        <TextBlock Margin="2"
                                   Width="100"
                                   Text="{Binding LastName}" />
                        <TextBlock Margin="2"
                                   Width="100"
                                   Text="{Binding LastUpdate}" />
                        <TextBox Text="{Binding LastUpdate}">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter"
                                            Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl},Path=DataContext.HelloCommand}"
                                            CommandParameter="{Binding .}" />
                            </TextBox.InputBindings>
                        </TextBox>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </DockPanel>
</UserControl>
