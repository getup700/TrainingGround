<UserControl x:Class="WpfApp1.Views.Communication.HandyControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp1.Views.Communication"
             xmlns:vm="clr-namespace:WpfApp1.ViewModels.Communication"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             d:DataContext="{d:DesignInstance Type=vm:HandyControlViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <StackPanel>
        <StackPanel Height="200"
                   Background="Green"
                   hc:Growl.Token="Success" />
        <StackPanel Height="200"
                   Background="Red"
                   hc:Growl.Token="Error" />
        <Button Content="SuccessCommand"
                Command="{Binding SuccessCommand}" />
        <Button Content="InfoCommand"
                Command="{Binding InfoCommand}" />
        <Button Content="ErrorCommand"
                Command="{Binding ErrorCommand}" />
        <Button Content="WarningCommand"
                Command="{Binding WarningCommand}" />
        <Button Content="FatalCommand"
                Command="{Binding FatalCommand}" />
        <Button Content="AskCommand"
                Command="{Binding AskCommand}" />
    </StackPanel>
</UserControl>
