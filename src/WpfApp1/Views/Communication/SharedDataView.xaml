<UserControl x:Class="WpfApp1.Views.Communication.SharedDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfApp1.Views.Communication"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:controls="handycon"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <StackPanel>
        <TextBlock x:Name="textBlock">
            <Run x:Name="head"
                 Foreground="Red" />
            <Run x:Name="middle"
                 Foreground="Blue" />
            <Run x:Name="tail"
             Foreground="Green" /></TextBlock>
        <Button x:Name="updateBtn"
                Content="Update Resource" />
        <Label Content="{Binding Sum,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
        <Label Content="{Binding Sum}" />
        <Label Content="{Binding Numbers.Count}" />
        <Label Content="SharedData" />
        <Button Content="Start"
                Style="{StaticResource ButtonPrimary}"
                Command="{Binding StartCommand}" />
        <Button Content="Stop"
                Style="{StaticResource ButtonPrimary}"
                Command="{Binding StopCommand}" />
        <ItemsControl ItemsSource="{Binding Numbers}" />
    </StackPanel>
</UserControl>
